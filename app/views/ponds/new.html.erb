<h1>
  Create a new pond
</h1>

<%= form_for(@pond) do |f| %>
<%= f.text_field :name, placeholder: "Name" %> 
<br>
<%= f.text_field :water_type, placeholder: "Water Type" %> 
<%= f.submit %>
<% end %>

<%= link_to "Cancel", ponds_path %>


